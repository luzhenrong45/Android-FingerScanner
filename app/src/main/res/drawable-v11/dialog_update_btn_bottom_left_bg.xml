<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#c5c5c5" android:endColor="#c5c5c5"
				android:angle="270" />
			<stroke android:width="0dp" android:color="#00300A" />
			<!-- FIXME android系统有bug：在2.3(具体版本不太确定)之前，bottomLeftRadius与bottomRightRadius的语义正好对调 -->
			<!-- 可以使用drawable-v11这种方式来解决此问题？ -->
			<corners 
				android:topRightRadius="0dp"
        		android:bottomLeftRadius="8dp"
        		android:topLeftRadius="0dp"
        		android:bottomRightRadius="0dp"
 			/>
			<padding android:left="0dp" android:top="0dp"
				android:right="0dp" android:bottom="0dp" />
		</shape>
	</item>
	
	<item android:drawable="@android:color/transparent" />
</selector>